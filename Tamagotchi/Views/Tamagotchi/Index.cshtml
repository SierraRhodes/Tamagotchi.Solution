<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tamagotchis</title>
</head>
<body>
  @using Tamagotchi.Models;

  <h1>Tama Tama Tamagotchi!</h1>

  @if (Model.Count == 0)
  {
    <p>There are no Tamagotchis here!</p>
  }
  <ul>
    @foreach (TamagotchiPet tamagotchi in Model)
    {
        <li>@tamagotchi.Name</li>
    }
  </ul>
  <a href="/tamagotchi/new">Add a new Tamagotchi</a>
</body>
</html>